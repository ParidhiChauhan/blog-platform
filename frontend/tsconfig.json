{
  "compilerOptions": {
    "target": "ES2020",  // Updated for better async/await and modern features
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,  // Enforces better TypeScript practices
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noUnusedLocals": false,  
    "noUnusedParameters": false,  
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "global.d.ts", "pages/_app.jsx"],

  "exclude": ["node_modules"]
}
